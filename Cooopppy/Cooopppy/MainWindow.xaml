<Window x:Class="Cooopppy.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Cooopppy"       
        xmlns:hc="https://handyorg.github.io/handycontrol"
        Loaded="OnLoaded" Closed="OnClosed"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <hc:SimplePanel>
        <hc:SimpleStackPanel>
            <hc:UniformSpacingPanel x:Name="uiList" Orientation="Vertical" Spacing="4"/>
        </hc:SimpleStackPanel>
        <hc:NotifyIcon Token="Cooopppy" x:Name="NotifyIconContextContent" Text="Cooopppy" IsBlink="False" Visibility="Visible" Icon="/icons8-paste-96.ico">
            <hc:NotifyIcon.ContextContent>
                <Border CornerRadius="4" Margin="10" Width="100" Height="100">
                    <Image Source="/icons8-paste-96.png"/>
                </Border>
            </hc:NotifyIcon.ContextContent>
        </hc:NotifyIcon>
    </hc:SimplePanel>
</Window>
